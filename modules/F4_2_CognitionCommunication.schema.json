    "gefahrenErkennen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.8 – Erkennen von Risiken und Gefahren"
    },
    "beduerfnisMitteilen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.9 – Mitteilen von elementaren Bedürfnissen"
    },
    "verstehenAufforderungen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.10 – Verstehen von Aufforderungen"
    },
    "gespraechsteilnahme": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.11 – Beteiligen an einem Gespräch"
    }
  },
  "required": [
    "erkennenPersonen",
    "oertlicheOrientierung",
    "zeitlicheOrientierung",
    "erinnerung",
    "mehrschrittigeHandlungen",
    "alltagsEntscheidungen",
    "verstehenInformationen",
    "gefahrenErkennen",
    "beduerfnisMitteilen",
    "verstehenAufforderungen",
    "gespraechsteilnahme"
