{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "F4.2 – Modul 2: Kognitive und kommunikative Fähigkeiten",
  "type": "object",
  "description": "Erfassung der geistigen Fähigkeiten und Kommunikationsfähigkeit anhand standardisierter Kriterien.",
  "properties": {
    "erkennenPersonen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.1 – Erkennen von Personen aus dem näheren Umfeld"
    },
    "oertlicheOrientierung": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.2 – Örtliche Orientierung"
    },
    "zeitlicheOrientierung": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.3 – Zeitliche Orientierung"
    },
    "erinnerung": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.4 – Erinnern an wesentliche Ereignisse oder Beobachtungen"
    },
    "mehrschrittigeHandlungen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.5 – Steuern von mehrschrittigen Alltagshandlungen"
    },
    "alltagsEntscheidungen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.6 – Treffen von Entscheidungen im Alltag"
    },
    "verstehenInformationen": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3,
      "description": "F4.2.7 – Verstehen von Sachverhalten und Informationen"
